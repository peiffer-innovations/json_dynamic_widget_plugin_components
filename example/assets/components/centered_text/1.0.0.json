{
    "name": "centered_text",
    "version": "1.0.0",
    "inputs": [
        {
            "name": "text",
            "description": "The text value",
            "defaultValue": ""
        }
    ],
    "outputs": [],
    "content": {
        "type": "center",
        "listen": [
            "text"
        ],
        "args": {
            "child": {
                "type": "text",
                "args": {
                    "text": "${'This text is centered:' + text ?? ''}"
                }
            }
        }
    }
}